<script src="//codecloud.cdn.speedyrails.net/sites/59035a6c6e6f645a5b420000/application/x-javascript/1503602727000/smoothZoomA24.js"></script>
<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
         var stores = getStoresList();
        renderStoreList('#stores_container','#stores_template', stores, "stores", "#", "Z");
        renderStoreList('#landmark_container','#landmark_template', stores, "stores", "#", "Z");
        show_content();
        $('#top_nav_stores').addClass('active_yellow')
        
        $("#png_map").attr("src", getPNGMapURL())
		$('#png_map').smoothZoom({
		   height: 496,
		    width: 619,
		    initial_ZOOM: 26,
			zoom_MIN: 26,
			zoom_MAX: 100,
			responsive: true,
		    responsive_maintain_ratio: true,
			zoom_BUTTONS_SHOW : 'YES',
			pan_BUTTONS_SHOW : 'NO',
			pan_LIMIT_BOUNDARY : 'NO',
			button_ALIGN: "top left",
			container: 'zoom_container'
		});
		
		show_png_pin(".map_pin_a", "#png_map")
        
    }
</script>